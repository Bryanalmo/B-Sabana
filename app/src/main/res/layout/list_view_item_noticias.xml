<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tituloNoticia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titulo Noticia"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewCategoria"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arte"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/descripcionNoticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Del 23 de octubre al 02 de noviembre se llevaron a cabo los enfrentamientos finales entre los mejores equipos universitarios deportivos. Las selecciones de nuestra Universidad fueron las siguientes: rugby masculino, voleibol playa femenino y masculino, tenis de campo, fútbol tenis, fútbol femenino, voleibol piso masculino y femenino, tenis de mesa y teawkondo."
            android:textSize="12dp"
            android:textStyle="italic" />


    </LinearLayout>
</LinearLayout>

